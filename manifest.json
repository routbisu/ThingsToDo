{
    "manifest_version": 2,
    "name": "Things To Do",
    "description": "This is a simple to-do extension for the Google Chrome browser.",
    "background": {
        "scripts": ["dscripts/jquery-3.2.1.min.js", "dscripts/firebase.js", "dscripts/background.js"],
        "persistent": false
    },
    "version": "1.0.0",
    "icons": {
        "48": "icon.png"
    },
    "browser_action": {
        "default_icon": {
            "48": "icon.png"
        },
        "default_popup": "popup.html"
    },
    
    "permissions": [
        "activeTab",
        "storage"
    ]
}